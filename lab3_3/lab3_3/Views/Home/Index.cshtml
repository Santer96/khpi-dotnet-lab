@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!Doctype html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Bookshop</title>
</head>
<body>
    <div>
        <h3>Books sell</h3>
        <table>
            <tr>
                <td><p>Book name</p></td>
                <td><p>Author</p></td>
                <td><p>Price</p></td>
            </tr>
            @foreach (var b in ViewBag.Books)
            {
            <tr>
                <td><p>@b.Name</p></td>
                <td><p>@b.Author</p></td>
                <td><p>@b.Price</p></td>
                <td><p><a href="/Home/Buy/@b.Id">Buy</a></p></td>
            </tr>
            }
        </table>
    </div>
</body>
</html>
